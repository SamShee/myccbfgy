<p id="notice"><%= notice %></p>
<h4 class="sub-header">用户列表</h4>
<%= link_to '新增用户', new_admin_user_path  ,{ class:'btn btn-success'}%>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>用户名</th>
                <th>邮箱</th>
                <th>性别</th>
                <th>电话</th>
                <th>是否可用</th>
                <th>实名</th>
                <th>是否锁定</th>
                <th>是否过期</th>
                <th>状态</th>
                <th>类型</th>
                <th colspan="3">操作</th>
            </tr>
        </thead>
        <tbody>
            <% @admin_users.each do |admin_user| %>
            <tr>
                <td><%= admin_user.username %></td>
                <td><%= admin_user.email %></td>
                <td><%= admin_user.gender %></td>
                <td><%= admin_user.mobile %></td>
                <td><%= admin_user.enabled %></td>
                <td><%= admin_user.real_name %></td>
                <td><%= admin_user.is_locked %></td>
                <td><%= admin_user.is_expired %></td>
                <td><%= admin_user.status %></td>
                <td><%= admin_user.type %></td>
                <td><%= link_to '详情', admin_user ,{ class:'btn btn-info'}%></td>
                <td><%= link_to '编辑', edit_admin_user_path(admin_user) ,{ class:'btn btn-warning'}%></td>
                <td><%= link_to '删除', admin_user, method: :delete, data: { confirm: '你确定删除该条目吗?' },class:'btn btn-danger'%></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>


