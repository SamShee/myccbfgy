<ul class="breadcrumb">
  <li><a href="/admin/main">首页</a></li>
  <li><a href="/admin/users" class="active">用户管理</a></li>
</ul>
<p id="notice"><%= notice %></p>
<h4 class="sub-header">用户列表</h4>
<%= link_to raw("<i class=\"fa fa-plus\" aria-hidden=\"true\">&nbsp;添加用户</i>"), new_admin_user_path  ,{ class:'btn btn-success'}%>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="text-align: center;">用户名</th>
                <th style="text-align: center;">邮箱</th>
                <th style="text-align: center;">性别</th>
                <th style="text-align: center;">电话</th>
                <th style="text-align: center;">是否可用</th>
                <th style="text-align: center;">实名</th>
                <th style="text-align: center;">是否锁定</th>
                <th style="text-align: center;">是否过期</th>
                <th style="text-align: center;">状态</th>
                <th style="text-align: center;">类型</th>
                <th colspan="3" style="text-align: center;">操作</th>
            </tr>
        </thead>
        <tbody>
            <% @admin_users.each do |admin_user| %>
            <tr>
                <td><%= admin_user.username %></td>
                <td style="text-align: center;"><%= admin_user.email %></td>
                <td style="text-align: center;">
                        <label>
                        <% if admin_user.gender== true %>
                            <%= "男"%>
                        <% else %>
                            <%= "女"%>
                        <% end %>
                        </label>
                </td>
                <td style="text-align: center;"><%= admin_user.mobile %></td>
                <td style="text-align: center;">
                    <label>
                        <% if admin_user.is_enabled== true %>
                            <%= "是"%>
                        <% else %>
                            <%= "否"%>
                        <% end %>
                        </label>
                </td>
                <td><%= admin_user.real_name %></td>
                <td style="text-align: center;">
                    <label>
                        <% if admin_user.is_locked== true %>
                            <%= "是"%>
                        <% else %>
                            <%= "否"%>
                        <% end %>
                        </label>
                </td>
                <td style="text-align: center;">
                    <label>
                        <% if admin_user.is_expired== true %>
                            <%= "是"%>
                        <% else %>
                            <%= "否"%>
                        <% end %>
                        </label>
                </td>
                <td><%= admin_user.status %></td>
                <td><%= admin_user.type %></td>
                <td><%= link_to raw("<i class=\"fa fa-info-circle\" aria-hidden=\"true\">&nbsp;详情</i>"), admin_user ,{ class:'btn btn-info'}%></td>
                <td><%= link_to raw("<i class=\"fa fa-wrench\" aria-hidden=\"true\">&nbsp;编辑</i>"), edit_admin_user_path(admin_user) ,{ class:'btn btn-warning'}%></td>
                <td><%= link_to raw("<i class=\"fa fa-trash\" aria-hidden=\"true\">&nbsp;删除</i>"), admin_user, method: :delete, data: { confirm: '你确定删除该条目吗?' },class:'btn btn-danger'%></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>


