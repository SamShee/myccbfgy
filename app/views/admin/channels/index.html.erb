<p id="notice"><%= notice %></p>

<h1>Admin Channels</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Parent</th>
      <th>Created by</th>
      <th>Updated by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_channels.each do |admin_channel| %>
      <tr>
        <td><%= admin_channel.name %></td>
        <td><%= admin_channel.parent_id %></td>
        <td><%= admin_channel.created_by %></td>
        <td><%= admin_channel.updated_by %></td>
        <td><%= link_to 'Show', admin_channel %></td>
        <td><%= link_to 'Edit', edit_admin_channel_path(admin_channel) %></td>
        <td><%= link_to 'Destroy', admin_channel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

